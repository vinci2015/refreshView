<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pokectwallet.hzhyq.refreshview.TestActivity">
    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#774477">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#223322"
            android:orientation="vertical"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_below"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/first"
        android:background="#890011"
        android:text="dsgsdgsgdsgsdgdsdgdsgg"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_below"
        android:onClick="addMargin"
        android:text="add top margin"/>
</RelativeLayout>
